upstream websvc_app_server {
    server unix:/home/caffeine/project/var/run/gunicorn.sock fail_timeout=0;
}

server {
    listen 80;
    listen [::]:80;

    rewrite ^ https://$host$request_uri? permanent;
}

server {
    listen 443;
    listen [::]:443;
    ssl on;

    add_header Strict-Transport-Security "max-age=31536000;includeSubDomains";

    ssl_ciphers HIGH:!aNULL:!MD5:!RC4:!DES:!3DES:!DSS;
    ssl_prefer_server_ciphers on;
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;

    ssl_certificate /etc/ssl/server.crt;
    ssl_certificate_key /etc/ssl/server.key;

    keepalive_timeout 4;
    client_max_body_size 4G;

    access_log /home/caffeine/project/var/log/nginx/websvc-access.log;
    error_log /home/caffeine/project/var/log/nginx/websvc-error.log;

    location /assets/ {
        autoindex off;
        alias /home/caffeine/project/var/share/static/;
        if ($query_string) {
            expires max;
        }
    }

    location /admin/media/ {
        root /home/caffeine/venv/lib/python3.6/site-packages/django/contrib/;
    }

    location / {
        proxy_pass http://websvc_app_server;

        proxy_redirect off;
        proxy_pass_header Server;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Scheme $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Host $server_name;
        proxy_set_header X-Forwarded-Protocol https;

        proxy_connect_timeout 500;
        proxy_read_timeout 500;
    }
}
